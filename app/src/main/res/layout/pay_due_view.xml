<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="312dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="15dp"
                android:text="Scheme ID"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvChitName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="10dp"
                android:text=""
                android:textSize="14sp" />


            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/pending_curve"
                android:backgroundTint="#46086b"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="2dp"
                android:text="Pending"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChitId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="15dp"
                android:text="Scheme Values"
                android:textColor="#000"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tvChitId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="10dp"
                android:text=""
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="67dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due no"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="10dp"
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvDueno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Due no"
                android:layout_weight="1"
                android:layout_marginStart="60dp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="10dp"
                android:textColor="#000"
                android:textSize="14sp"/>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="120dp"
            app:cardBackgroundColor="#46086b">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="15dp"
                    android:text="Due amount"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="30dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="15dp"
                    android:text="Due in date"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvDueIn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="25dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="69dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/ic_pay_due_bg"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Pay Now"
                    android:textAllCaps="false"
                    android:textColor="#DA2329"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>